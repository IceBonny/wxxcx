.playlist-container {
  width: 220rpx;
  position: relative;
  padding-bottom: 20rpx;
}
.playlist-container image {
  width: 100%;
  height: 220rpx;
  border-radius: 20rpx;
}
.playlist-container text {
  font-size:  24rpx;
  color: #fff;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 0.15);
  background: url(data:image/svg+xml;)
}

.playlist-container view {
  font-size: 26rpx;
  line-height: 1.2;
  padding: 2px 0 0 6px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}